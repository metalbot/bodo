body    
    .bodo(ng-controller="BoardCtrl")
        .container-fluid
            .row-fluid
                .span12
                    .hero-unit
                        ol.unstyled.inline
                            li(ng-repeat="phase in board.phases")
                                .well.well-small.title.text-center                    
                                    strong{{phase.title}}
                                .well.well-small                    
                                    ol.unstyled
                                        li(ng-repeat="card in cards")
                                            .card
                                                strong{{card.title}}
                                                p{{card.story}}
