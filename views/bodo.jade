#cardModal.modal.hide.fade(tabindex="-1",role="dialog",aria-labeledby="modalLabel",aria-hidden="true")
  .modal-header
    button(type="button",class="close",data-dismiss="modal",aria-hidden="true") x
    h4#modalLabel= tagLine
  .modal-body
    .row-fluid.well.well-small
      .span12
        p.lead= story
    .row-fluid.well.well-small
      .span12
        ul.inline
          each tag in tags
            li
              span.label.label-info= tag
    .row-fluid.well.well-small
      .span12
        each crit in acceptanceCriteria
          label.checkbox
            input(type="checkbox")
            = crit
  .modal-footer
    button.btn(data-dismiss="modal",aria-hidden="true") Close
